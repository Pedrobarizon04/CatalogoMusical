<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Editar Artista</title>
  <link rel="stylesheet" href="/css/editArtist.css">
</head>
<body>
  <div class="app-container">
    <!-- Sidebar -->
    <header class="navbar">
      <div class="logo-container">
        <img src="/images/Logo.png" alt="Logo" class="logo">
      </div>
      <div class="navbar-title">
        <h1>Catálogo Musical</h1>
      </div>
      <ul class="nav-links">
        <li><a href="/" class="link">Início</a></li>
        <li><a href="/discs" class="link">Discos</a></li>
        <li><a href="/artists" class="link active">Artistas</a></li>
        <li><a href="/genres" class="link">Gêneros</a></li>
      </ul>
    </header>

    <!-- Main Content -->
    <main class="main-content">
      <h1 class="page-title">Editar Artista</h1>
    
      <form action="/artists/edit/<%= artista.id %>" method="POST" class="edit-form">
        <label for="nome">Nome:</label>
        <input type="text" id="nome" name="nome" value="<%= artista.nome %>" required>
    
        <label for="genero">Gênero Musical:</label>
        <input type="text" id="genero" name="genero" value="<%= artista.genero %>" required>
    
        <label for="foto">URL da Foto:</label>
        <input type="url" id="foto" name="foto" value="<%= artista.foto %>" required>
    
        <label for="discos-search">Buscar Discos:</label>
        <input type="text" id="discos-search" placeholder="Digite para buscar discos">
        <button type="button" id="search-button">Buscar</button>
    
        <ul id="discos-list" class="discos-list">
          <% discos.forEach(disco => { %>
            <li>
              <input type="checkbox" id="disco-<%= disco.id %>" name="discos" value="<%= disco.id %>" 
              <%= artista.Discos.map(d => d.id).includes(disco.id) ? 'checked' : '' %>>
              <label for="disco-<%= disco.id %>"><%= disco.titulo %></label>
            </li>
          <% }) %>
        </ul>
    
        <button type="submit" class="btn-primary">Salvar Alterações</button>
      </form>
    
      <div class="centered-link">
        <a href="/artists" class="back-link">Voltar para a lista de artistas</a>
      </div>
    </main>
  </div>

  <script src="/js/editArtist.js"></script>
</body>
</html>
